<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="Spotify playlists curated like radio stations">
    <meta name="keywords" content="Spotify, Apple Music, Playlist, Radio station, domshyra">
    <meta name="author" content="Dominic Schira">
    <title>@ViewData["Title"] - domshyra</title>


    <environment include="Development">
        @RenderSection("Scripts", required: false)
        <script src="~/lib/jquery/jquery.js"></script>
        <script src="~/lib/bootstrap/js/bootstrap.bundle.js"></script>
    </environment>
    <environment exclude="Development">
        @RenderSection("Scripts", required: false)
        <script src="~/lib/jquery/jquery.min.js"></script>
        <script src="~/lib/bootstrap/js/bootstrap.bundle.min.js"></script>
    </environment>

    <environment include="Development">
        <link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap.css" />
        <link rel="stylesheet" href="~/css/site.css" />
    </environment>
    <environment exclude="Development">
        <link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap.min.css" />
        <link rel="stylesheet" href="~/css/site.min.css" asp-append-version="true" />
    </environment>

    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.1/css/all.css" integrity="sha384-50oBUHEmvpQ+1lW4y57PTFmhCaXp0ML5d60M1M7uH2+nqUivzIebhndOJK28anvf" crossorigin="anonymous">

</head>
<body>
    <header class="navbar navbar-expand-lg navbar-dark bg-primary">
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item">
                    <a class="nav-link p-2" href="https://music.apple.com/profile/domshyra" target="_blank" rel="noopener" aria-label="Apple Music"
                       data-toggle="tooltip" data-placement="bottom" title="View my Apple Music">Apple Music 
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link p-2" href="https://open.spotify.com/user/domshyra" target="_blank" rel="noopener" aria-label="Spotify"
                       data-toggle="tooltip" data-placement="bottom" title="View my Spotify">Spotify
                    </a>
                </li>
            </ul>
            <ul class="navbar-nav flex-row ml-md-auto d-none d-md-flex">
                <li class="nav-item">
                    <a class="nav-link p-2" href="https://music.apple.com/profile/domshyra" target="_blank" rel="noopener" aria-label="Apple Music"
                       data-toggle="tooltip" data-placement="bottom" title="View my Apple Music">
                        <i class="fab fa-itunes-note"></i>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link p-2" href="https://open.spotify.com/user/domshyra" target="_blank" rel="noopener" aria-label="Spotify"
                       data-toggle="tooltip" data-placement="bottom" title="View my Spotify">
                        <i class="fab fa-spotify"></i>
                    </a>
                </li>
            </ul>
            <a class="btn btn-outline-light d-none d-lg-inline-block mb-3 mb-md-0 ml-md-3" href="mailto:domshyra@gmail.com?subject=Your Playlists">Contact</a>
        </div>
    </header>
    <div class="container body-content my-3 py-3">
        @RenderBody()
    </div>
    <div class="container mt-1 pt-3 border-top border-light">
        <footer>
            <p>&copy; @DateTime.Now.Year - dominic schira</p>
            <p>View this websites code on <a href="https://github.com/domshyra/domshyra" target="_blank">github</a>.</p>
        </footer>
    </div>
</body>
</html>
<script src="~/js/bundle.js"></script>
<script>
    $(function () {
        $('[data-toggle="tooltip"]').tooltip()
    })
</script>